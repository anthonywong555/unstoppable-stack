{
  "name": "@boilerplate/database",
  "version": "0.0.1",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./dist node_modules .turbo",
    "dev": "npm run build --watch",
    "build": "tsup index.ts base/index.ts --format cjs,esm --dts --outDir dist && npm run generate",
    "build.watch": "npm run build --watch",
    "lint": "TIMING=1 eslint \"**/*.ts*\"",
    "generate": "npx drizzle-kit generate --name=init",
    "db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@boilerplate/common": "workspace:*",
    "drizzle-orm": "catalog:",
    "pg": "catalog:"
  },
  "devDependencies": {
    "@boilerplate/tsconfig": "workspace:*",
    "@types/pg": "catalog:",
    "drizzle-kit": "catalog:",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
